<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Main background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/card_dark" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Gradient overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#FFFFFF05"
                android:endColor="#00000010"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Top highlight -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:height="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow_light" />
            <corners 
                android:topLeftRadius="16dp"
                android:topRightRadius="16dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
        </shape>
    </item>
    
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/border_dark" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
</layer-list>
