<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer neon glow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/electric_blue_neon" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    
    <!-- Main electric blue gradient -->
    <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/button_electric_start"
                android:centerColor="@color/button_electric_center"
                android:endColor="@color/button_electric_end"
                android:type="linear" />
            <corners android:radius="25dp" />
        </shape>
    </item>
    
    <!-- Neon edge glow effect -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/neon_edge_electric" />
            <corners android:radius="25dp" />
        </shape>
    </item>
    
    <!-- Inner shadow for depth -->
    <item android:top="6dp" android:left="6dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000020" />
            <corners android:radius="22dp" />
        </shape>
    </item>
    
</layer-list>
