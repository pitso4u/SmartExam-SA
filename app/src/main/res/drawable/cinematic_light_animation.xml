                android:type="linear"
                android:angle="45"
                android:startColor="#001a2332"
                android:centerColor="#5e9fe065"
                android:endColor="#001a2332" />
        </shape>
    </item>
    
    <item android:duration="80">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#001a2332"
                android:centerColor="#4e8ecf55"
                android:endColor="#001a2332" />
        </shape>
    </item>
    
    <item android:duration="80">
        <shape android:shape="rectangle">
