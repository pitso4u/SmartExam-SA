            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#001a2332"
                android:centerColor="#2e6bc235"
                android:endColor="#001a2332" />
        </shape>
    </item>
    
    <item android:duration="80">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#001a2332"
                android:centerColor="#1e5ba825"
                android:endColor="#001a2332" />
        </shape>
    </item>
    
    <!-- Reset to start -->
    <item android:duration="100">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#001a2332"
                android:centerColor="#0d4a8e15"
                android:endColor="#001a2332" />
        </shape>
    </item>

</animation-list>
