<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer glow effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00D4FF22" />
            <corners android:radius="25dp" />
        </shape>
    </item>
    
    <!-- Main button gradient -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#00E5FF"
                android:centerColor="#00D4FF"
                android:endColor="#00ACC1"
                android:type="linear" />
            <corners android:radius="23dp" />
        </shape>
    </item>
    
    <!-- Top highlight for 3D effect -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:height="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#FFFFFF40"
                android:endColor="#FFFFFF00"
                android:type="linear" />
            <corners 
                android:topLeftRadius="23dp"
                android:topRightRadius="23dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
        </shape>
    </item>
    
    <!-- Subtle inner shadow -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000015" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
</layer-list>
