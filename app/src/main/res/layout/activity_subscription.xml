<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/cinematic_light_simple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/smartexamsalogobadge"
            android:scaleType="fitCenter"
            android:contentDescription="SmartExam SA Logo" />

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Your Plan"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary_enterprise"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Trial Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/enterprise_surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvTrialStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading trial status..."
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_enterprise"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvTrialDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Checking..."
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary_enterprise" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Subscription Plans -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available Plans"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary_enterprise"
            android:gravity="start"
            android:layout_marginBottom="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSubscriptionPlans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:nestedScrollingEnabled="false" />

        <!-- Restore Purchases -->
        <Button
            android:id="@+id/btnRestorePurchases"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Restore Purchases"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/enterprise_primary"
            android:background="@drawable/enterprise_button_secondary"
            android:layout_marginBottom="16dp"
            android:elevation="4dp" />

        <!-- Features -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Premium Features"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary_enterprise"
            android:gravity="start"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✓ Unlimited PDF generation\n✓ No watermarks\n✓ Access to all question packs\n✓ Priority support\n✓ Advanced assessment tools"
            android:textSize="14sp"
            android:textColor="@color/text_secondary_enterprise"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

</ScrollView>
