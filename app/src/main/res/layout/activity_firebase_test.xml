<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activities.FirebaseConnectionTestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Firebase Connection Test"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Ready"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="#E3F2FD"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textColor="#1976D2" />

        <Button
            android:id="@+id/btnTestAuth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Firebase Auth"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/btnTestFirestore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Firestore Connection"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#2196F3" />

        <Button
            android:id="@+id/btnWriteTestData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Write Test Data"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FF9800" />

        <Button
            android:id="@+id/btnReadTestData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Read Test Data"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#9C27B0" />

        <Button
            android:id="@+id/btnClearResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear Results"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#607D8B" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Results:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Results will appear here..."
            android:textSize="14sp"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:minHeight="200dp"
            android:textColor="@android:color/black"
            android:fontFamily="monospace" />

    </LinearLayout>

</ScrollView>
