<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Enterprise-Grade Base Application Theme -->
    <style name="Theme.SmartExamSA" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Enterprise Primary Colors -->
        <item name="colorPrimary">@color/electric_blue</item>
        <item name="colorPrimaryVariant">@color/electric_blue_dark</item>
        <item name="colorOnPrimary">@color/enterprise_primary</item>
        
        <!-- Enterprise Secondary Colors -->
        <item name="colorSecondary">@color/emerald_neon</item>
        <item name="colorSecondaryVariant">@color/emerald_neon_dark</item>
        <item name="colorOnSecondary">@color/enterprise_primary</item>
        
        <!-- Enterprise Backgrounds & Surfaces -->
        <item name="android:windowBackground">@color/enterprise_primary</item>
        <item name="colorSurface">@color/enterprise_surface</item>
        <item name="colorOnSurface">@color/text_primary_enterprise</item>
        
        <!-- Professional Typography System -->
        <item name="android:textColorPrimary">@color/text_primary_enterprise</item>
        <item name="android:textColorSecondary">@color/text_secondary_enterprise</item>
        <item name="android:textColorTertiary">@color/text_tertiary_enterprise</item>
        <item name="android:textColorHint">@color/text_hint_enterprise</item>
        
        <!-- Enterprise Shapes & Components -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Enterprise.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Enterprise.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Enterprise.LargeComponent</item>
        
        <!-- Status & Navigation - Edge-to-Edge Control -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">false</item>
        
        <!-- Enterprise Typography Styles -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Enterprise.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Enterprise.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Enterprise.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Enterprise.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Enterprise.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Enterprise.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Enterprise.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Enterprise.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Enterprise.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Enterprise.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Enterprise.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Enterprise.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Enterprise.Overline</item>
    </style>

    <!-- Splash Screen Theme - Android 12+ Compatible -->
    <style name="Theme.SmartExamSA.Splash" parent="Theme.SplashScreen">
        <!-- Splash Screen API Configuration -->
        <item name="windowSplashScreenBackground">@color/enterprise_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/smartexamsalogobadge</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.SmartExamSA</item>
        
        <!-- Fallback theme for pre-Android 12 -->
        <item name="android:windowBackground">@drawable/cinematic_light_simple</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/enterprise_primary</item>
        <item name="android:navigationBarColor">@color/enterprise_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Enterprise branding -->
        <item name="colorPrimary">@color/electric_blue</item>
        <item name="colorPrimaryVariant">@color/electric_blue_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_enterprise</item>
    </style>

    <!-- Legacy Splash Screen Theme (for pre-Android 12) -->
    <style name="Theme.SmartExamSA.NoActionBar" parent="Theme.SmartExamSA">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/status_bar_enterprise</item>
        <item name="android:navigationBarColor">@color/navigation_bar_enterprise</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Enterprise Shape System -->
    <style name="ShapeAppearance.Enterprise.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.Enterprise.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ShapeAppearance.Enterprise.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>
    
    <!-- Enterprise Typography System -->
    <style name="TextAppearance.Enterprise.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary_enterprise</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="TextAppearance.Enterprise.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary_enterprise</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="TextAppearance.Enterprise.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary_enterprise</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.Enterprise.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary_enterprise</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.Enterprise.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary_enterprise</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.Enterprise.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary_enterprise</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.Enterprise.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_secondary_enterprise</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.Enterprise.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_secondary_enterprise</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.Enterprise.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_primary_enterprise</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.Enterprise.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_secondary_enterprise</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.Enterprise.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="TextAppearance.Enterprise.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_tertiary_enterprise</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="TextAppearance.Enterprise.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_tertiary_enterprise</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <!-- Enterprise Button Components -->
    <style name="Widget.App.Button.Electric" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/enterprise_button_electric</item>
        <item name="android:textColor">@color/enterprise_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:outlineProvider">none</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="backgroundTint">@null</item>
        <item name="android:backgroundTint">@null</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:paddingHorizontal">32dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Enterprise.Button</item>
    </style>
    
    <style name="Widget.App.Button.Emerald" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/enterprise_button_emerald</item>
        <item name="android:textColor">@color/enterprise_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:outlineProvider">none</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="backgroundTint">@null</item>
        <item name="android:backgroundTint">@null</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:paddingHorizontal">32dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Enterprise.Button</item>
    </style>
    
    <style name="Widget.App.Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/enterprise_button_secondary</item>
        <item name="android:textColor">@color/text_primary_enterprise</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:outlineProvider">none</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="backgroundTint">@null</item>
        <item name="android:backgroundTint">@null</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:paddingHorizontal">32dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Enterprise.Button</item>
    </style>
    
    <!-- Enterprise Card Component -->
    <style name="Widget.App.Card.Enterprise" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/enterprise_surface</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">12dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:background">@drawable/enterprise_card</item>
    </style>
    
    <!-- Legacy Button Style for backward compatibility -->
    <style name="Widget.App.Button" parent="Widget.App.Button.Electric">
        <!-- Inherits enterprise electric styling -->
    </style>
    
    <!-- Legacy Card Style for backward compatibility -->
    <style name="Widget.App.CardView" parent="Widget.App.Card.Enterprise">
        <!-- Inherits enterprise card styling -->
    </style>
</resources>
